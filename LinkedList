package lists;

public class LinkedList<Q>{
	
	private class Node{
		
		Q info;
		Node next;
		
		public Node(Q i, Node n) {
			info = i;
			next = n;
			
		}
		
	}

	private Node head = null;
	private int size;
	
	public void add(Q info) {
		
		size++;
		
		Node newNode = new Node(info, null);
		
		if (head == null) {
			head = newNode;
						
		}
		
		else {
			
			Node curr = head;
			while (curr.next!= null) {
				
				//wherever our current is, set it equal to the next one
				curr = curr.next;
				
			}
			
			//sets equal to end Node
			curr.next = newNode;
			
		}
		
	}
	
	public void add(Q info, int n) {
		
		try {
			
			Node curr = head;
			Node newNode = new Node(info, null);
			
			if (n==0) {
				
				if (head == null) {
					head = newNode;
					
				}
							
			}
			
			else {
				
				for (int i = 0; i<n-1; i++) {
					curr = curr.next;
					
				}
				
				newNode.next = curr.next.next;
				curr.next = newNode;
				
			}
			
			size++;
			
		}
		
		catch(NullPointerException e) {
			
			throw new IndexOutOfBoundsException();
			
		}	
		
	}
	
	public Q get(int i) {
		
		try {
		Node curr = head;
		
		for (int j = 0; j<i; j++) {
			curr = curr.next;	
		}
			
		return curr.info;
	
	}
	
	catch(NullPointerException e) {
		throw new IndexOutOfBoundsException();
		
		}
		
	}
	
	public int size() {
		return size;
		
	}
	
	public Q remove(int i) {
		
		try {
		
			Q storedInfo;
			
			if (i == 0) {
				storedInfo = head.info;
				head = head.next;
				size--;
				
			}
			
			else {
				
				Node curr = head;
				
				for (int j = 0; j<i-1; j++) {
					curr = curr.next;	
				}
				
				storedInfo = curr.next.info;
				curr.next = curr.next.next;
				size--;
				
				
			}
			
			return storedInfo;
			
		}
		
		catch(NullPointerException e) {
			
			throw new IndexOutOfBoundsException();
			
			}
			
		}
	
	public String toString() {
		
		String output = "";
		
		Node curr = head;
		while (curr != null) {
			
			output += curr.info.toString() + "->";
			curr = curr.next;
			
		}
		
		return output;
		
	}
	
	public static void main(String[] args) {
		
		LinkedList<String> test = new LinkedList<String>();
		
		test.add("Hi");
		test.add("my");
		test.add("name");
		test.add("is");
		test.add("Anika");
		test.add("I", 4);
		test.remove(3);
		System.out.println(test);
		
	}
	
}
		
